generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String?
  email       String?  @unique
  role        Role     @default(CLIENT)
  condition   String?
  severity    String?
  createdAt   DateTime @default(now())
  sessions    Session[]
}

model Session {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  condition   String
  summary     String?
  notes       Json?
  aiFeedback  String?
  createdAt   DateTime @default(now())
}

model Therapist {
  id             String   @id @default(cuid())
  name           String
  specialization String[]
  availability   String?
  aiModel        String?
  sessions       Session[]
}

enum Role {
  CLIENT
  THERAPIST
}
